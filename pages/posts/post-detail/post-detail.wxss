/* pages/posts/post-detail/post-detail.wxss */
.container{
  display: flex;
  flex-direction: column;
}
.header-image{
  width: 100%;
  height: 460rpx;
}
.audio{
  position: absolute;
  width:102rpx;
  height: 110rpx;
  opacity: 0.6;
  left:50%;
  margin-left:-51rpx;
  top:180rpx;
}
.author-date{
  display: flex;
  flex-direction: row;
  align-items: center;  
  margin:20rpx 0 0 30rpx;
}
.avatar{
  width:64rpx;
  height: 64rpx;
}
.author{
  font-size: 30rpx;
  color:#666666;
  margin-left:20rpx;
}
.const-text {
  color:#999;
  margin-left:20rpx;
}
.date{
  color:#999;
  margin-left:30rpx;
}
.title{
  font-size: 30rpx;
  margin-left: 40rpx;
  font-weight: 700;
  margin-top: 30rpx;letter-spacing: 2rpx;
  color:#4b556c;
}
.tool{
  margin-top:20rpx;
}
.circle-image{
  float: right;
  margin-right:40rpx;
}
.circle-image image{
  width: 90rpx;
  height: 90rpx;
}
.share-img{
  margin-left:30rpx;
}
.horizon{
  width: 660rpx;
  height: 2rpx;
  background-color: #e5e5e5;
  vertical-align: middle;
  position: relative;
  top:46rpx;
  z-index: -99;
  margin: 0 auto;
}
.detail{
  color:#666;
  margin:20rpx 30rpx 0;
  line-height: 44rpx;
  letter-spacing: 2px;
  word-break: break-all;
}