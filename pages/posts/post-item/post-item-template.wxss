.post-container {
  display: flex;
  flex-direction: column;
  margin: 20rpx 0 40rpx;
  border-top: 1rpx solid #ededed;
  border-bottom: 1rpx solid #ededed;  
  background-color: #ffffff;
  padding-bottom: 10rpx;
}
.post-author-date {
  margin: 10rpx 0 20rpx 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.post-author-date image{
  width: 60rpx;
  height: 60rpx;
  /* vertical-align: middle; */
}
.post-author-date text{
  margin-left: 20rpx;
  /* vertical-align: middle; */
  font-size: 26rpx;
}
.post-title {
  font-size: 34rpx;
  font-weight: 600;
  margin:0 10rpx 0 10rpx;
  color: #333333;
}
.post-image{
  width: 100%;
  height: 340rpx;
  margin-bottom: 15px;
}
.post-content{
  font-size: 28rpx;
  color: #666666;
  letter-spacing: 2rpx;
  margin:0 0 20rpx 20rpx;
}
.post-like{
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 26rpx;
  margin-left:20rpx;
}
.post-like-image{
  width:32rpx;
  height: 32rpx;
  margin-right:16rpx; 
}
.post-like-font{
  margin-right: 40rpx;
}